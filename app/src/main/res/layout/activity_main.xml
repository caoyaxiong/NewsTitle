<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></FrameLayout>

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/gray_item_press">

        <RadioButton
            android:id="@+id/home_page"
            android:drawableTop="@drawable/home_page_button"
            style="@style/radioButton"
            android:text="首页" />

        <RadioButton
            android:id="@+id/vedio_page"
            style="@style/radioButton"
            android:drawableTop="@drawable/vedio_page_button"
            android:text="视频" />

        <RadioButton
            android:id="@+id/attention_page"
            style="@style/radioButton"
            android:drawableTop="@drawable/attention_page_button"
            android:text="关注" />

        <RadioButton
            android:id="@+id/mine_page"
            style="@style/radioButton"
            android:drawableTop="@drawable/mine_page_button"
            android:text="我的" />
    </RadioGroup>
</LinearLayout>